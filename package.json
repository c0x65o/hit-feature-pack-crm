{
  "name": "@hit/feature-pack-crm",
  "version": "1.0.23",
  "description": "CRM feature pack with contacts, companies, deals, activities, LLM integration, RBAC, webhooks, and data export. Uses @hit/ui-kit for shell-agnostic UI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/crm.d.ts",
      "import": "./dist/schema/crm.js",
      "require": "./dist/schema/crm.js",
      "default": "./dist/schema/crm.js"
    },
    "./server/api/*": {
      "types": "./dist/server/api/*.d.ts",
      "import": "./dist/server/api/*.js",
      "require": "./dist/server/api/*.js",
      "default": "./dist/server/api/*.js"
    }
  },
  "files": [
    "dist",
    "feature-pack.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "peerDependencies": {
    "@hit/ui-kit": "*",
    "react": "^18.0.0 || ^19.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "@hit/sdk": "*",
    "lucide-react": ">=0.263.0",
    "drizzle-orm": ">=0.30.0",
    "openai": ">=4.0.0",
    "@dnd-kit/core": ">=6.0.0",
    "@dnd-kit/sortable": ">=7.0.0",
    "@dnd-kit/utilities": ">=3.2.0",
    "recharts": ">=2.0.0"
  },
  "devDependencies": {
    "@hit/sdk": "file:../../hit-sdks/hit-sdk-typescript",
    "@hit/ui-kit": "file:../hit-ui-kit",
    "@types/react": "^18.2.0",
    "drizzle-orm": "^0.30.0",
    "lucide-react": "^0.460.0",
    "typescript": "^5.0.0",
    "openai": "^4.0.0",
    "next": "^14.2.5",
    "@dnd-kit/core": ">=6.0.0",
    "@dnd-kit/sortable": ">=7.0.0",
    "@dnd-kit/utilities": ">=3.2.0",
    "recharts": "^2.0.0"
  },
  "keywords": [
    "hit",
    "feature-pack",
    "crm",
    "customer-relationship-management",
    "sales",
    "deals",
    "contacts",
    "ui-kit"
  ],
  "license": "MIT"
}
